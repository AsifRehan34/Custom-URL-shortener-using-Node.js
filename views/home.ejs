<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>URL Shortener</title>
    <style>
        /* Global styles */
        body {
            font-family: 'Arial', sans-serif;
            background-color: #f4f4f9;
            color: #333;
            margin: 0;
            padding: 0;
            display: flex;
            justify-content: center;
            align-items: center;
            height: 100vh;
            flex-direction: column;
        }

        h1 {
            color: #4a4e69;
        }

        /* Container styles */
        .container {
            background-color: #fff;
            border-radius: 8px;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
            padding: 20px;
            max-width: 600px;
            width: 100%;
            margin: 20px auto;
            text-align: center;
        }

        /* Input form styles */
        .url-form {
            margin-bottom: 20px;
        }

        .url-form input[type="text"] {
            width: calc(100% - 110px);
            padding: 10px;
            border: 2px solid #9a8c98;
            border-radius: 4px;
            font-size: 16px;
        }

        .url-form button {
            background-color: #4a4e69;
            color: #fff;
            padding: 10px 20px;
            border: none;
            border-radius: 4px;
            font-size: 16px;
            cursor: pointer;
            margin-left: 10px;
        }

        .url-form button:hover {
            background-color: #6c757d;
        }

        /* Message display styles */
        .message {
            background-color: #c9ada7;
            color: #fff;
            padding: 10px;
            border-radius: 4px;
            margin-bottom: 20px;
            display: none; /* Hide by default */
        }

        /* Table styles */
        table {
            width: 100%;
            border-collapse: collapse;
            margin-top: 20px;
        }

        table,
        th,
        td {
            border: 1px solid #ddd;
        }

        th,
        td {
            padding: 12px;
            text-align: center;
        }

        th {
            background-color: #4a4e69;
            color: #fff;
        }

        tr:nth-child(even) {
            background-color: #f2f2f2;
        }
    </style>
</head>

<body>
    <div class="container">
        <h1>URL Shortener</h1>
        <div>
            <form class="url-form" action="/url" method="POST">
                <label for="url">Enter your URL</label>
                <input type="text" name="url" placeholder="Enter your URL here..." required>
                <button type="submit">Shorten URL</button>
            </form>
        </div>
       <div>
        <% if (locals.id) { %>
            <p>Short url generated:http://localhost:8001/url/<%= id %></p>
  
        <% } %>

       </div>
       <div>
        <% if (locals.urls) { %>
            <table>
                <thead>
                    <tr>
                        <th>#</th>
                        <th>Short ID</th>
                        <th>Redirected URL</th>
                        <th>Clicks</th>
                    </tr>
                </thead>
                <tbody>
                    <% urls.forEach(function(url, index) { %>
                        <tr>
                            <td><%= index + 1 %></td>
                            <td><%= url.shortId %></td>
                            <td><%= url.shortURL %></td>
                            <td><%= url.visitHistory.length %></td>
                        </tr>
                    <% }) %>
                </tbody>
            </table>
        <% } %>
       </div>    
    </div>
      

</body>

</html>
